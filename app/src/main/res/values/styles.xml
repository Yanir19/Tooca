<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="customize" parent="Theme.AppCompat.NoActionBar">


        <item name="colorPrimary">@color/md_pink_500_50</item>
        <item name="colorPrimaryDark">@color/md_pink_500_25</item>
        <item name="android:titleTextStyle">@style/NoTitleText</item>
        <item name="android:subtitleTextStyle">@style/NoTitleText</item>

    </style>

    <style name="testo" parent="@android:style/Widget.DeviceDefault.DatePicker">
        <item name="android:divider">@color/md_pink_700</item>
        <item name="android:textColor">@color/md_black_1000_75</item>
    </style>

    <style name="NoTitleText">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="FondoTransparente" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/md_transparent</item>
    </style>

</resources>
