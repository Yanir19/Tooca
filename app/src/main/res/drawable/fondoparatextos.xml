<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/md_white_1000_75"/>
            <stroke
                android:width="3dp"
                android:color="@color/md_white_1000_25" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>



    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/md_white_1000"/>
            <stroke
                android:width="3dp"
                android:color="@color/md_disabled_hint_text" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>