<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/LytContenedor"
        xmlns:tools="http://schemas.android.com/tools"
        android:fitsSystemWindows="false"
        android:orientation="vertical"
        android:background="@color/md_white_1000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="?attr/colorPrimary"/>

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="496dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="BIENVENIDA"
            android:id="@+id/textView"
            android:textColor="@color/md_pink_500"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="25dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">



            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:id="@+id/NombreTxt"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/md_black_1000_75"
                android:backgroundTint="@color/md_divider"
                android:hint="Nombre"
                android:textColorHint="@color/md_disabled_hint_text"
                android:gravity="center_horizontal"
                android:ems="9"
                android:layout_gravity="center"
                android:elegantTextHeight="false"
                android:singleLine="false"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:textSize="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="9"
                android:id="@+id/ApellidoTxt"
                android:backgroundTint="@color/md_divider"
                android:textColor="@color/md_black_1000_75"
                android:textColorHint="@color/md_disabled_hint_text"
                android:hint="Apellido"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:textSize="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Fechabtn"
                    android:background="@android:drawable/ic_menu_my_calendar" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="9"
                    android:id="@+id/FechaTxt"
                    android:backgroundTint="@color/md_divider"
                    android:textColor="@color/md_black_1000_75"
                    android:textColorHint="@color/md_disabled_hint_text"
                    android:hint="Fecha de nacimiento"
                    android:textSize="20dp" />

            </LinearLayout>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="9"
                android:id="@+id/Direccion_1Txt"
                android:backgroundTint="@color/md_divider"
                android:textColor="@color/md_black_1000_75"
                android:textColorHint="@color/md_disabled_hint_text"
                android:hint="Ubicacion"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:textSize="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="9"
                android:id="@+id/Direccion_2txt"
                android:backgroundTint="@color/md_divider"
                android:textColor="@color/md_black_1000_75"
                android:textColorHint="@color/md_disabled_hint_text"
                android:hint="Direccion"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:inputType="textPostalAddress"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:textSize="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="9"
                android:id="@+id/passwordNuevo"
                android:backgroundTint="@color/md_divider"
                android:textColor="@color/md_black_1000_75"
                android:textColorHint="@color/md_disabled_hint_text"
                android:hint="Password"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:textSize="20dp"
                android:inputType="textPassword" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center|right">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/AceptarBtn"
                    android:onClick="clickAceptar"
                    android:background="@drawable/ic_action_next_item"
                    android:layout_gravity="bottom" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/md_pink_500_50"
        android:layout_gravity="bottom"
        android:layout_marginTop="25dp" />

</LinearLayout>
